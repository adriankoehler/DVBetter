{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		/*  */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		/*  */
		"module": "es2022",
		"moduleResolution": "bundler",
		"noEmit": true,
		/*  */
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		/* resolution */
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	}
}
